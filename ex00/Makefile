NAME = megaphone

CC = clang++

FLAG = -Wall -Werror -Wextra

SRC = megaphone.cpp

OBJ = $(OBJDIR)/*.o

OBJDIR = objects

all: $(NAME)

$(NAME): $(OBJ)
	@echo "\033[36m\n$@ creation\t\t\t\tðŸ› \n"
	$(CC) $(FLAG) -o $@ $+
	@echo "\033[35m\n$@ has been created with success !\tðŸŒˆ\n"

$(OBJ): $(SRC)
	@echo "\033[32m\nSources files compilation\t\t\tâš™ï¸\n"
	$(CC) $(FLAG) -c $(SRC)
	mkdir -p $(OBJDIR)
	mv *.o $(OBJDIR)

clean:
	@echo "\033[33m\nRemove objects files\t\t--->\t\tðŸ—‘\n"
	/bin/rm -f $(OBJ)

fclean: clean
	@echo "\033[33m\nRemove $(NAME) file\t\t--->\t\tðŸ—‘\n"
	/bin/rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re